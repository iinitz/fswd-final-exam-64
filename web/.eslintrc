{
  "extends": "iinitz/ts-react",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "linebreak-style": 0,
    "no-console": 0,
    "noImplicitAny": true,
    "max-len": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "no-unused-vars": [
      "error",
      {
          "varsIgnorePattern": "^[A-Z]"
      }
  ],
    "@typescript-eslint/no-misused-promises": 0
  }
}
